<%- include('../partials/header'); %>

<% if(status === 200) { %>
  <table>
    <thead>
      <tr>
        <th scope="col">Channel Name</th>
        <th scope="col">Channel Description</th>
        <th scope="col">Splitter Address</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= data.name %></td>
        <td><%= data.description %></td>
        <td><%= data.splitterAddress %></td>
        <td>
          <a href="/edit?channelUrl=<%= channelUrl %>" class="button button-xs">Edit</a>
          <a href="/remove?channelUrl=<%= channelUrl %>" class="button button-xs">Delete</a>
        </td>
      </tr>
    </tbody>
  </table>

<% } else if(status === 400) { %>
  <div class="background-info margin-l padding-xs color-white">Channel not found!</div>
<% } else { %>
  <div class="background-error margin-l padding-xs color-white">Error occurred while processing your request</div>
<% } %>

<%- include('../partials/footer'); %>
